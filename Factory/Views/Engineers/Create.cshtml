@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new engineer</h4>
<hr />

<p>@Html.ValidationMessageFor(model => model.EngineerFName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  <p>Engineer First Name: @Html.TextBoxFor(model => model.EngineerFName, new { required = "required" })</p>
  

  <p>Engineer Last Name: @Html.TextBoxFor(model => model.EngineerLName, new { required = "required" })</p>
  

  <p>Engineers License: @Html.TextBoxFor(model => model.EngineerLicense, new { required = "required" })</p>

  <input type="submit" value="Add new engineer"/>
}
<br>
<p>@Html.ActionLink("Show all engineers", "Index")</p>