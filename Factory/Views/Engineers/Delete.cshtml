@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="card border-danger mb-3">
  <div class="card-header bg-danger text-white">Delete Engineer</div>
  <div class="card-body">
    <h5 class="card-title">Are you sure you want to delete this Engineer?</h5>
    <p class="card-text">
      <strong>@Html.DisplayNameFor(model => model.EngineerFName):</strong> @Html.DisplayFor(model => model.EngineerFName)<br>
      <strong>@Html.DisplayNameFor(model => model.EngineerLName):</strong> @Html.DisplayFor(model => model.EngineerLName)
    </p>
    @using (Html.BeginForm())
    {
      <button type="submit" class="btn btn-danger">Delete</button>
    }
  </div>
</div>
<br>
<p>@Html.ActionLink("Back to engineer list", "Index", "Engineers", null, new { @class = "btn btn-primary" })</p>