@{
    Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="card-title">Machines</h4>
                </div>
                <div class="card-body">
                    @if (Model["machines"].Length == 0)
                    {
                        <p>No Machines have been added yet!</p>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (Machine machine in Model["machines"])
                            {
                                <li class="list-group-item">@Html.ActionLink(machine.MachineType, "Details", "Machines", new { id = machine.MachineId }, new { @class = "machine-link" })</li>
                            }
                        </ul>
                    }
                </div>
                <div class="card-footer">
                    <p>@Html.ActionLink("Manage Machines", "Index", "Machines", null, new { @class = "btn btn-primary" })</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="card-title">Engineers</h4>
                </div>
                <div class="card-body">
                    @if (Model["engineers"].Length == 0)
                    {
                        <p>No engineers have been added yet!</p>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (Engineer engineer in Model["engineers"])
                            {
                                <li class="list-group-item">@Html.ActionLink(engineer.EngineerFName, "Details", "Engineers", new { id = engineer.EngineerId }, new { @class = "engineer-link" })</li>
                            }
                        </ul>
                    }
                </div>
                <div class="card-footer">
                    <p>@Html.ActionLink("Manage Engineers", "Index", "Engineers", null, new { @class = "btn btn-primary" })</p>
                </div>
            </div>
        </div>
    </div>
</div>
