@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="container">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Are you sure you want to delete this machine?</h2>

      <div class="form-group">
        <label for="MachineType">Machine Type:</label>
        <p class="card-text"> @Html.DisplayFor(model => model.Age) year old @Html.DisplayFor(model => model.MachineType)</p>
      </div>

      @using (Html.BeginForm())
      {
        <br>
        <input type="submit" value="Delete" class="btn btn-danger" />
      }
      
      <p class="mt-3">
        @Html.ActionLink("Back to machine list", "Index", "Machines", null, new { @class = "btn btn-primary" })
      </p>
    </div>
  </div>
</div>
