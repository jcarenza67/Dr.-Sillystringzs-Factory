@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4 class="my-4">Edit this machine: @Html.DisplayFor(model => model.MachineType)</h4>

<p>@Html.ValidationMessageFor(model => model.MachineType, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  <div class="form-group">
    <label for="MachineType">Machine Type:</label>
    @Html.EditorFor(model => model.MachineType, new { htmlAttributes = new { @class = "form-control" } })
  </div>

  <div class="form-group">
    <label for="LastServiced">Last Serviced:</label>
    @Html.EditorFor(model => model.LastServiced, new { htmlAttributes = new { @class = "form-control" } })
  </div>

  <div class="form-group">
    <label for="Age">How old is this Machine?</label>
    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
  </div>

  <div class="form-group">
    <label for="MachineDescription">Machine Description:</label>
    @Html.EditorFor(model => model.MachineDescription, new { htmlAttributes = new { @class = "form-control" } })
  </div>

  <input type="submit" value="Save" class="btn btn-primary" />
}

<p>@Html.ActionLink("Back to Machine list", "Index", null, new { @class = "btn btn-secondary" })</p>
